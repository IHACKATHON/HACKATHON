<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    android:paddingHorizontal="22dp"
tools:context=".PayActivity">
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />

    <TextView
        android:id="@+id/store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나리닭강정"
        android:fontFamily="@font/pretendard_semi_bold"
        android:textSize="40sp"
        android:textColor="@color/grey"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제금액"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="24sp"
        android:textColor="@color/grey"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/price"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16000"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="30sp"
                android:textColor="@color/main"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 원"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="30sp"
                android:textColor="@color/main"
                />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/btn_reset"
            android:contentDescription="reset btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_reset"
            android:background="@color/bg"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/main"
        />

    <TextView
        android:id="@+id/balance"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="잔액 85,000원"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="20sp"
        android:textColor="@color/grey"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:background="@drawable/box_ligtgrey_10"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8,000원"
                android:background="@drawable/box_outline_main10"
                android:textColor="@color/main"
                android:fontFamily="@font/pretendard_regular"
                />

            <Button
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9,000원"
                android:background="@drawable/box_outline_main10"
                android:textColor="@color/main"
                android:fontFamily="@font/pretendard_regular"
                />

            <Button
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15,000원"
                android:background="@drawable/box_outline_main10"
                android:textColor="@color/main"
                android:fontFamily="@font/pretendard_regular"
                />

            <Button
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20,000원"
                android:background="@drawable/box_outline_main10"
                android:textColor="@color/main"
                android:fontFamily="@font/pretendard_regular"
                />




        </LinearLayout>

    </ScrollView>
    <Space
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/button_main_round20"
        android:text="결제하기"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="20sp"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />






</LinearLayout>
